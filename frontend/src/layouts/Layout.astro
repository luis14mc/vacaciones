---
import "../assets/app.css";

export interface Props {
  title: string;
  description?: string;
  showNavbar?: boolean;
  showSidebar?: boolean;
}

const { 
  title, 
  description = "Sistema de Gestión de Vacaciones CNI Honduras",
  showNavbar = true,
  showSidebar = false 
} = Astro.props;
---

<!DOCTYPE html>
<html lang="es" data-theme="cni">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | CNI Honduras</title>
    
    <!-- Preload fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet">
  </head>
  <body class="bg-base-100 text-base-content font-inter">
    <div class="min-h-screen flex flex-col">
      {showNavbar && (
        <nav class="navbar bg-primary text-primary-content shadow-lg sticky top-0 z-50">
          <div class="navbar-start">
            <div class="dropdown">
              <div tabindex="0" role="button" class="btn btn-ghost lg:hidden">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                </svg>
              </div>
              <ul tabindex="0" class="menu menu-sm dropdown-content mt-3 z-[1] p-2 shadow bg-base-100 rounded-box w-52">
                <li><a href="/dashboard" class="text-base-content">Dashboard</a></li>
                <li><a href="/vacaciones" class="text-base-content">Mis Vacaciones</a></li>
                <li><a href="/perfil" class="text-base-content">Mi Perfil</a></li>
              </ul>
            </div>
            <a href="/" class="btn btn-ghost text-xl font-bold">
              <svg class="w-8 h-8 mr-2" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 2L2 7v10c0 5.55 3.84 10 9 11 1.41-.41 2.73-1.16 3.86-2.14.55-.49 1.05-1.03 1.5-1.61 1.03-1.32 1.64-2.91 1.64-4.75V7l-10-5z"/>
              </svg>
              CNI Honduras
            </a>
          </div>
          
          <div class="navbar-center hidden lg:flex">
            <ul class="menu menu-horizontal px-1">
              <li><a href="/dashboard" class="btn btn-ghost">Dashboard</a></li>
              <li><a href="/vacaciones" class="btn btn-ghost">Mis Vacaciones</a></li>
              <li><a href="/calendario" class="btn btn-ghost">Calendario</a></li>
              <li class="dropdown dropdown-hover">
                <div tabindex="0" role="button" class="btn btn-ghost">
                  Administración
                  <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                  </svg>
                </div>
                <ul tabindex="0" class="dropdown-content z-[1] menu p-2 shadow bg-base-100 rounded-box w-52">
                  <li><a href="/admin/usuarios" class="text-base-content">Gestión de Usuarios</a></li>
                  <li><a href="/admin/solicitudes" class="text-base-content">Solicitudes</a></li>
                  <li><a href="/admin/ajustes" class="text-base-content">Ajustes de Días</a></li>
                  <li><a href="/admin/feriados" class="text-base-content">Días Feriados</a></li>
                  <li><a href="/admin/reportes" class="text-base-content">Reportes</a></li>
                </ul>
              </li>
            </ul>
          </div>
          
          <div class="navbar-end">
            <div class="dropdown dropdown-end">
              <div tabindex="0" role="button" class="btn btn-ghost btn-circle avatar placeholder">
                <div class="bg-primary-content text-primary w-10 rounded-full">
                  <span class="text-sm font-semibold">UN</span>
                </div>
              </div>
              <ul tabindex="0" class="mt-3 z-[1] p-2 shadow menu menu-sm dropdown-content bg-base-100 rounded-box w-52">
                <li class="menu-title text-base-content">
                  <span>Usuario Nombre</span>
                  <span class="text-xs opacity-60">usuario@cni.hn</span>
                </li>
                <li><a href="/perfil" class="text-base-content">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                  </svg>
                  Mi Perfil
                </a></li>
                <li><a href="/configuracion" class="text-base-content">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  </svg>
                  Configuración
                </a></li>
                <div class="divider my-0"></div>
                <li><a href="#" class="text-error">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
                  </svg>
                  Cerrar Sesión
                </a></li>
              </ul>
            </div>
            <button class="btn btn-ghost btn-circle ml-2">
              <div class="indicator">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-5 5-5-5h5v-13z"></path>
                </svg>
                <span class="badge badge-xs badge-accent indicator-item"></span>
              </div>
            </button>
          </div>
        </nav>
      )}

      {showSidebar && (
        <aside class="w-64 bg-base-200 shadow-lg fixed h-full top-16 z-40">
          <div class="p-4">
            <h2 class="text-lg font-semibold mb-4">Navegación</h2>
            <ul class="menu bg-base-200 w-full">
              <li><a href="/dashboard">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2H5a2 2 0 00-2-2z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 5a2 2 0 012-2h4a2 2 0 012 2v6H8V5z"></path>
                </svg>
                Dashboard
              </a></li>
              <li><a href="/vacaciones">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
                Mis Vacaciones
              </a></li>
              <li><a href="/equipo">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                </svg>
                Mi Equipo
              </a></li>
            </ul>
          </div>
        </aside>
      )}

      <main class={`flex-1 p-6 ${showSidebar ? 'ml-64' : ''}`}>
        <slot />
      </main>
    </div>

    <!-- Toast notifications container -->
    <div id="toast-container" class="toast toast-top toast-end z-50"></div>

    <!-- Scripts -->
    <script>
      // Tema automático
      const theme = localStorage.getItem('theme') || 'cni';
      document.documentElement.setAttribute('data-theme', theme);
      
      // Logout functionality
      document.addEventListener('DOMContentLoaded', () => {
        const logoutBtn = document.querySelector('a[href="#"]');
        if (logoutBtn) {
          logoutBtn.addEventListener('click', (e) => {
            e.preventDefault();
            // Aquí se implementará la lógica de logout
            console.log('Logout clicked');
          });
        }
      });
    </script>
  </body>
</html>
